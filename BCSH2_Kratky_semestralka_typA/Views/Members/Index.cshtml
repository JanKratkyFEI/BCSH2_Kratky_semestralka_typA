@model IEnumerable<Member>

<h2>Seznam Členů</h2>

<form method="get" asp-action="Index">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="searchName">Jméno</label>
            <input type="text" class="form-control" id="searchName" name="searchName" v />
        </div>
        <div class="form-group col-md-3">
            <label for="searchRank">Rank</label>
            <input type="text" class="form-control" id="searchRank" name="searchRank" />
        </div>
        <div class="form-group col-md-3">
            <label for="searchClass">Class</label>
            <input type="text" class="form-control" id="searchClass" name="searchClass"  />
        </div>
        <div class="form-group col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Hledat</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Jméno</th>
            <th>Příjmení</th>
            <th>Rank</th>
            <th>Class</th>
            <th>Gilda</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.Name</td>
                <td>@member.Surname</td>
                <td>@member.Rank</td>
                <td>@member.Class</td>
                <td>@member.Guild?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@member.Id_Member" class="btn btn-warning">Upravit</a>
                    <a asp-action="Delete" asp-route-id="@member.Id_Member" class="btn btn-danger">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Members/Create" class="btn btn-primary">Přidat nového člena</a>
