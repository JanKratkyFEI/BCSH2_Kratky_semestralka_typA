<!DOCTYPE html>

<html lang="en">





<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BCSH2_Kratky_semestralka_typA</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BCSH2_Kratky_semestralka_typA.styles.css" asp-append-version="true" />

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Uncial+Antiqua&display=swap" rel="stylesheet">

</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/pics/GuildLogo.jpg" alt="Guild Management System" style="height: 75px;">
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<!-- Dropdown menu pro Zobrazit -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="indexDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Zobrazit
							</a>
							<ul class="dropdown-menu dropdown-with-background" aria-labelledby="indexDropdown">
								<li><a class="dropdown-item" asp-controller="Guilds" asp-action="Index">Gildy</a></li>
								<li><a class="dropdown-item" asp-controller="Members" asp-action="Index">Členové</a></li>
								<li><a class="dropdown-item" asp-controller="Quests" asp-action="Index">Úkoly</a></li>
								<li><a class="dropdown-item" asp-controller="TreasureVaults" asp-action="Index">Pokladnice</a></li>
								@* <!--obrázek test-->
								<li class="dropdown-image">
									<img src="~/pics/pantheon.jpg" alt="Background" class="dropdown-background" />
								</li> *@
							</ul>
						</li>
						<!-- Dropdown pro Přidat -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="addDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Přidat
							</a>
							<ul class="dropdown-menu" aria-labelledby="addDropdown">
								<li><a class="dropdown-item" asp-controller="Guilds" asp-action="Create">Přidat Gildu</a></li>
								<li><a class="dropdown-item" asp-controller="Members" asp-action="Create">Přidat Člena</a></li>
								<li><a class="dropdown-item" asp-controller="Quests" asp-action="Create">Přidat Quest</a></li>
								<li><a class="dropdown-item" asp-controller="TreasureVaults" asp-action="Create">Přidat Pokladnici</a></li>
							</ul>
						</li>
						

						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	


	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - BCSH2_Kratky_semestralka_typA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
		<div class="githublink">
			<p>https://github.com/JanKratkyFEI/BCSH2_Kratky_semestralka_typA</p>
			@* <img src="~/pics/pixel-heart.gif" alt="Animace srdíčka" /> *@
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<iframe src="/audio/music.html" style"=display: none;" id="musicFrame"></iframe>
	<div id="musicControl" style="position: fixed; top: 10px; right: 10px;">
		<button id="musicToggle" style="background: none; border: none; cursor: pointer; font-size: 1.5rem;">
			🎵
		</button>
	</div>
	<script>
		const musicFrame = document.getElementById('musicFrame');
		const musicToggle = document.getElementById('musicToggle');

		musicToggle.addEventListener('click', () => {
			const music = musicFrame.contentWindow.document.getElementById('backgroundMusic');
			if (music.paused) {
				music.play();
				musicToggle.textContent = "🎵"; // Zapnuto
			} else {
				music.pause();
				musicToggle.textContent = "🔇"; // Vypnuto
			}
		});
	</script>

	
	



	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
