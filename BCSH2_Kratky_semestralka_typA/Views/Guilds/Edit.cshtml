@model Guild

<h2>Upravit gildu</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id_Guild" />
        <div class="form-group">
            <label for="Name">Název</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Type">Typ gildy</label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<GuildType>()" class="form-control"></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Prestige">Prestiž (-100/100)</label>
            <input asp-for="Prestige" type="number" class="form-control" />
            <span asp-validation-for="Prestige" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Přidat gildu</button>
</form>


